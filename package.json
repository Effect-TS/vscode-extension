{
  "name": "effect-vscode",
  "displayName": "Effect Dev Tools",
  "description": "Tools to assist development with the Effect Typescript framework",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tim-smart/effect-vscode.git"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Effect Dev Tools",
      "properties": {
        "effect.devServer.port": {
          "type": "integer",
          "default": 34437,
          "description": "The port to run the Effect dev server on"
        },
        "effect.metrics.pollInterval": {
          "type": "integer",
          "default": 500,
          "description": "The time in milliseconds between polling for metrics"
        }
      }
    },
    "commands": [
      {
        "command": "effect.startServer",
        "title": "Effect Dev Tools: Start Server",
        "icon": "$(play)"
      },
      {
        "command": "effect.stopServer",
        "title": "Effect Dev Tools: Stop Server",
        "icon": "$(debug-stop)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "effect",
          "title": "Effect Dev Tools",
          "icon": "resources/icons/effect-light.svg"
        }
      ]
    },
    "views": {
      "effect": [
        {
          "id": "effect-clients",
          "name": "Clients"
        },
        {
          "id": "effect-tracer",
          "name": "Tracer"
        },
        {
          "id": "effect-metrics",
          "name": "Metrics"
        }
      ],
      "debug": [
        {
          "id": "effect-context",
          "name": "Effect Context",
          "when": "inDebugMode"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "effect-clients",
        "contents": "The Effect Dev Tools server is currently stopped.\n[Start the server](command:effect.startServer)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "effect.startServer",
          "when": "view === effect-clients && effect:running === false",
          "group": "navigation"
        },
        {
          "command": "effect.stopServer",
          "when": "view === effect-clients && effect:running === true",
          "group": "navigation"
        }
      ]
    },
    "colors": [
      {
        "id": "effect.context.tag",
        "description": "The color of a tag in the Effect context view",
        "defaults": {
          "light": "debugTokenExpression.name",
          "dark": "debugTokenExpression.name"
        }
      },
      {
        "id": "effect.context.variable",
        "description": "The color of a variable in the Effect context view",
        "defaults": {
          "light": "debugTokenExpression.name",
          "dark": "debugTokenExpression.name"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsup",
    "watch": "tsup --watch",
    "pretest": "pnpm run compile && pnpm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@effect/experimental": "^0.6.5",
    "@effect/language-service": "^0.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "~20.11.3",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@vscode/test-electron": "^2.3.8",
    "effect": "2.1.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.2.2",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "ws": "^8.16.0"
  },
  "sideEffects": []
}
